{
  "expo": {
    "name": "Agribank Digital Guard",
    "slug": "agribank-digital-guard",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo-agribank.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo-agribank.png",
      "resizeMode": "contain",
      "backgroundColor": "#FBD6E3"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.agribank.digitalguard",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Ứng dụng cần quyền microphone để ghi âm giọng nói của bạn",
        "NSSpeechRecognitionUsageDescription": "Ứng dụng cần quyền nhận diện giọng nói để chuyển đổi giọng nói thành văn bản"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo-agribank.png",
        "backgroundColor": "#FBD6E3"
      },
      "package": "com.agribank.digitalguard",
      "permissions": [
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/logo-agribank.png"
    },
    "plugins": [
      "expo-speech"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
